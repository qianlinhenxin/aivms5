<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qlhx.service.base.realize.mapper.TestMapper">

    <resultMap id="baseResultMap" type="com.qlhx.service.base.realize.model.Test">
        <id column="NAME" property="name"/>
        <result column="AGE" property="age"/>
    </resultMap>

    <sql id="select_column">
        NAME,
        AGE
    </sql>

    <select id="findByParams" resultMap="baseResultMap" parameterType="java.util.Map">
        SELECT
            <include refid="select_column"/>
        FROM
            test
        <where>
            <if test="name != null and name.trim() != ''">
                AND
                NAME = #{name}
            </if>
            <if test="age != null and age.trim() != ''">
                AND
                AGE = #{age}
            </if>
        </where>
    </select>
</mapper>